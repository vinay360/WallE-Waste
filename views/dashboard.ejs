    }
    .page1 .content{
        display: flex;
        justify-content: space-around;
        height: 100%;
    }
    .page1 .text{
        padding: 20px;
        width: 50%;
        /* border: 1px solid red;; */
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
    }
    .images{
        width: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
        /* border: 1px solid red;; */
    }
    .images img{
        /* height: 200px; */
        width: 250px;
    }

    /* Page 2 */
    .content2{
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: left;
        justify-content: space-evenly;
    }
